#!/usr/bin/env ruby

libdir = File.realpath(File.join(File.dirname(__FILE__), '../lib'))
$LOAD_PATH.unshift(libdir) unless $LOAD_PATH.include?(libdir)

require 'rubygems'
require 'gatherlogs'
require 'gatherlogs/cli'

begin
  Gatherlogs::CLI.run
rescue StandardError => e
  puts "[ERROR] #{e}"
  puts 'Backtrace:'
  puts e.backtrace
  exit 1
end
